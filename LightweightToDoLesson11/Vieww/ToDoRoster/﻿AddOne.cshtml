@using LightweightToDoLesson11.Models;
﻿@model AddOneModele

@{
    ViewData["Title"] = $"Add one goal";
}

<div class="display-6">@ViewData["Title"]</div>

<div class="animate shadow-sm bg-white border rounded overflow-hidden px-3 py-4 mt-5 mb-5">
    <div>
        <form asp-controller="ToDoRoster" asp-action="AddOne">
            <div class="form-group mb-3">
                <label for="text">Your one goal text</label>
                <textarea class="form-control" name="text" placeholder="Very important goal"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>


@await Html.PartialAsync("_LastAdded", Model.QueuedGoals)